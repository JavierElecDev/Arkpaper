<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/fondo">
    <ImageView
        android:id="@+id/logImgLogo"
        android:layout_width="147dp"
        android:layout_height="135dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logocir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione una opciÃ³n para"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logImgLogo"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gestionar sus productos"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        android:layout_marginTop="0dp"/>
    <LinearLayout
        android:id="@+id/LayoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        android:orientation="horizontal"
        >

   <Button
android:id="@+id/btnAccesoConsultar"
       android:layout_width="180dp"
       android:layout_height="wrap_content"
       android:text="Consultar"
        android:textSize="20sp"
       android:layout_weight="1"
       android:backgroundTint="#0E4CC7"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="10dp"
       />
   <Button
       android:id="@+id/btnAccesoCrear"
       android:layout_width="180dp"
       android:layout_height="wrap_content"
       android:text="Crear"
       android:textSize="20sp"
       android:layout_weight="1"
       android:backgroundTint="#0E4CC7"
       android:layout_marginStart="0dp"
       android:layout_marginEnd="30dp"
       />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/lastLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnAccesoModificar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:textSize="20sp"
                android:layout_weight="1"
                android:backgroundTint="#0E4CC7"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                android:id="@+id/btnAccesoEliminar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textSize="20sp"
                android:layout_weight="1"
                android:backgroundTint="#0E4CC7"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30dp"
                />
        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/exit_to_app_white"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutButton" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="-10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClose" />





</androidx.constraintlayout.widget.ConstraintLayout>